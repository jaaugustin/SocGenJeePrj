        <class>com.jee.JPA_demo.UsersEntity</class>
        <class>com.jee.JPA_demo.EmployesEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/basejava"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="adm"/>
            <property name="hibernate.connection.password" value="adm"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>

